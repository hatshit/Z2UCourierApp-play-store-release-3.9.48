<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedwhiteback"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgVehicleAgreeView"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/vehicle_agree_dhl"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:fontFamily="@font/gotham_rnd_medium"
                    android:paddingLeft="45dp"
                    android:paddingRight="45dp"
                    android:lineSpacingExtra="2dp"
                    android:text="Your vehicle MUST be locked at all time.\nWhen not attended"
                    android:id="@+id/msgTxtVehicleAgree"
                    android:textColor="@color/gun_metal"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/roundedskybluebg"
                    android:text="Yes! I agree"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/agreeBtnVehicleAgree"
                    android:textColor="@drawable/textselector"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/new_boder"
                    android:text="I disagree"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/disagreeBtnVehicleAgree"
                    android:textColor="@color/gold_dark"
                    android:textSize="14dp" />

            </LinearLayout>
        </RelativeLayout>
</RelativeLayout>
