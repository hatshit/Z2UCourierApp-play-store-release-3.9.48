<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/dhlBookingSuburbTxt"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dhlBookingAlrtTotalTxt"
        android:layout_marginLeft="20dp"
        android:text="On route to pick"
        android:textColor="#374350"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/dhlBookingAlrtCountTxt"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_alignBottom="@+id/dhlBookingAlrtOnRoutePickTxt"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="0"
        android:textColor="#FF476A"
        android:textSize="15dp"
        android:textStyle="bold"/>

</RelativeLayout>