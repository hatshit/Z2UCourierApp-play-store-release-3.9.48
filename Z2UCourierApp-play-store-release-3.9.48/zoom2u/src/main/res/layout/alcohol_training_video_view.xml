<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:elevation="3dp"
    android:background="@color/semiwhite"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/alcoholeTrainingVideoViewTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/app_header_green" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="11dp"
            android:id="@+id/backBtnalcoholeTrainingVideo"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:src="@drawable/nav_back_white"/>

        <TextView
            android:id="@+id/titleTxtalcoholeTrainingVideo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingLeft="0dp"
            android:text="Alcohol training video"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/msgTxtalcoholeTrainingVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:layout_below="@+id/alcoholeTrainingVideoViewTitleLayout"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingLeft="0dp"
        android:paddingTop="35dp"
        android:lineSpacingExtra="3dp"
        android:text="You are enabled for alcohol deliveries!"
        android:textColor="@color/gun_metal"
        android:textSize="14dp" />

    <VideoView
        android:id="@+id/videoViewToPlayVideo"
        android:layout_width="match_parent"
        android:layout_below="@+id/msgTxtalcoholeTrainingVideo"
        android:layout_height="280dp"
        android:visibility="gone"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="15dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_below="@+id/msgTxtalcoholeTrainingVideo"
        android:layout_marginTop="35dp"
        android:visibility="visible"
        android:id="@+id/signatureImgLayout"
        android:background="@color/white"
        android:layout_marginBottom="15dp" >

    <ImageView
        android:id="@+id/uploadedSignatureImg"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar2AlcoholeTraining"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_below="@+id/msgTxtalcoholeTrainingVideo"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_appskyblue"
        android:text="Next"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:id="@+id/nextPageButton"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>