<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:elevation="5dp"
    android:background="@drawable/roundedwhiteback"
    >

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/dialogHeaderDHLSearchBookingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="bottom|center"
            android:padding="5dp"
            android:text="Search RUN booking"
            android:textColor="@color/gunmetal_new1"
            android:textSize="18dp"
            android:textStyle="bold" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/dialogHeaderDHLSearchBookingText"
            android:layout_marginTop="20dp"
            android:background="@color/lightgraycolor" />


        <EditText
            android:id="@+id/edtSearchDHLBooking"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/line1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/roundedwhiteback_new"
            android:gravity="center"
            android:hint="Enter AWB number*"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="#374350"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dhlSearchValidationTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtSearchDHLBooking"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Please enter AWB number*"
            android:textColor="#FF476A"
            android:textSize="12dp"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dhlSearchValidationTxt"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="3dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:weightSum="1">

            <Button
                android:id="@+id/searchDhlBtn"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/roundedskybluebg"
                android:gravity="center"
                android:text="Search"
                android:textColor="@drawable/textselector"
                android:textSize="15dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/cancelDhlSearchBtn"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/new_boder"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/gold_dark"
                android:textSize="15dp"
                android:textStyle="bold" />


        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>