<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/recentItemLayout"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".38"
            android:textColor="@color/summary_label"
            android:textSize="12dp"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:id="@+id/recentDateTxtSummaryReport"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".38"
            android:textColor="@color/summary_label"
            android:textSize="12dp"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:id="@+id/recentRatingTxtSummaryReport"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".24"
            android:id="@+id/recentSuburbTxtSummaryReport">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/summary_label"
                android:textSize="12dp"
                android:gravity="center|left"
                android:id="@+id/recentPickSuburbTxtSummaryReport"
                android:paddingLeft="10dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/summary_arrow"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/recentPickSuburbTxtSummaryReport"
                android:id="@+id/arrowBtnSummaryReport"
                android:layout_marginLeft="7dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/summary_label"
                android:textSize="12dp"
                android:gravity="center|left"
                android:layout_toRightOf="@+id/arrowBtnSummaryReport"
                android:id="@+id/recentDropSuburbTxtSummaryReport"
                android:layout_marginLeft="7dp"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>