<?xml version="1.0" encoding="utf-8"?>

<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe"
    android:layout_marginVertical="3dp"
    android:layout_marginHorizontal="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">


    <LinearLayout
        android:id="@+id/swipeaccept"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <View
            android:background="@color/light_gary"
            android:layout_width="5dp"
            android:layout_height="40dp"/>

        <LinearLayout
            android:gravity="center"
            android:background="#4CAF50"
            android:layout_width="70dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/discardBtn_RouteList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Accept" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/swipereject"
        android:layout_width="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal"
        android:layout_height="match_parent">


        <LinearLayout
            android:gravity="center"
            android:background="#CF1406"
            android:layout_width="70dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/discardBtn_RouteList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Delete" />


        </LinearLayout>
        <View
            android:background="@color/light_gary"
            android:layout_width="5dp"
            android:layout_height="40dp"/>
    </LinearLayout>

<LinearLayout
    android:background="@drawable/inviteuser"
    android:layout_width="match_parent"
    android:weightSum="2"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_weight="0.9"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_margin="3dp"
            android:layout_width="60dp"
            android:layout_height="60dp">

            <com.zoom2u.roundedimage.RoundedImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:id="@+id/teamMemberImg"
                android:background="@drawable/round_circle_bg">

            </com.zoom2u.roundedimage.RoundedImageView>

            <LinearLayout
                android:orientation="horizontal"
                android:visibility="gone"
                android:id="@+id/linear"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/Fname"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:id="@+id/Lname"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_marginHorizontal="5dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/name"
                style="@style/style_15_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="James">

            </TextView>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:maxLines="2"
                    android:id="@+id/userfname"
                    style="@style/style_12_bold"
                    android:text="ankit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1.1"
        android:weightSum="2"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearaccept"
            android:gravity="center"
            android:background="@drawable/acceptbacground"
            android:layout_width="65dp"
            android:layout_height="30dp">

            <TextView
                android:textColor="@color/white"
                style="@style/style_12_bold"
                android:id="@+id/number"
                android:text="Accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineardelete"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:background="@drawable/deletebacground"
            android:layout_width="65dp"
            android:layout_height="30dp">

            <TextView
                android:textColor="@color/white"
                style="@style/style_12_bold"
                android:id="@+id/number"
                android:text="Reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>

</com.daimajia.swipe.SwipeLayout>