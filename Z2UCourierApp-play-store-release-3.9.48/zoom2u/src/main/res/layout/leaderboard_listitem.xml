<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="7dp"
    android:paddingBottom="7dp"
    android:id="@+id/listItemLayoutLeaderView"
    android:background="@color/white" >

    <TextView
        android:id="@+id/leaderBoardItemCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:text="1"
        android:textSize="13dp"
        android:textColor="#374350" />

    <com.zoom2u.roundedimage.RoundedImageView
        android:id="@+id/leaderBoardCourierImg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/leaderBoardItemCount"
        android:src="@drawable/icon_account" />

     <TextView
        android:id="@+id/leaderBoardCourierName"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:text="Arun Dey"
        android:textSize="13dp"
        android:singleLine="true"
        android:layout_toRightOf="@+id/leaderBoardCourierImg"
        android:textColor="#374350" />
    
     <TextView
        android:id="@+id/leaderBoardCourierPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="35dp"
        android:text="1024"
        android:textSize="13dp"
        android:textColor="#374350" />
    
</RelativeLayout>