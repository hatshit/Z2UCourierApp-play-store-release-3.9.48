<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.zoom2you"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/mainNewBookingList"
    android:layout_marginTop="1dp"
    android:background="#FFFFFF"
    android:orientation="vertical" >

     <TextView
             android:layout_height="match_parent"
             android:layout_width="match_parent"
             android:visibility="gone"
             android:background="#ffffff"
             android:id="@+id/noBookingTextNewBooking"
             android:text="New Booking not available"
             android:textSize="17dp"
             android:layout_weight=".1"
             android:gravity="center"
             />
    
         <ListView
            android:id="@+id/bookingList"
            android:layout_below="@+id/noBookingTextNewBooking"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:visibility="visible"
        	android:divider="@null" />
        
          <TextView
             android:layout_height="match_parent"
             android:layout_width="match_parent"
             android:id="@+id/onLineOffLineBtn"
             android:text="Offline"
             android:visibility="visible"
             android:background="#DC143C"
             android:textSize="15dp"
             android:textStyle="bold"
             android:textColor="#FFFFFF"
             android:layout_weight=".9"
             android:gravity="center"
             />

</LinearLayout>