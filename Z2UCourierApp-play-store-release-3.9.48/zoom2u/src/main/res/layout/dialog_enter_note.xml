<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="180dp"
    android:layout_gravity="center"
    android:background="#3D2B1F"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/dialogEdtNoteTxt"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:textSize="14dp"
        android:hint="Enter note here"
        android:paddingLeft="7dp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/saveDialogBtnNote"
        android:layout_width="140dp"
        android:layout_height="38dp"
        android:layout_below="@+id/dialogEdtNoteTxt"
        android:layout_alignParentRight="true"
        android:layout_marginRight="7dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Update"
        android:background="@drawable/save_latedetail"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_light"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/cancelDialogBtnNote"
        android:layout_width="140dp"
        android:layout_height="38dp"
        android:layout_alignLeft="@+id/dialogEdtNoteTxt"
        android:layout_below="@+id/dialogEdtNoteTxt"
        android:background="@drawable/cancel_latedetail"
        android:gravity="center"
        android:text="Cancel"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/holo_red_light"
        android:textSize="15dp"
        android:textStyle="bold" />

</RelativeLayout>