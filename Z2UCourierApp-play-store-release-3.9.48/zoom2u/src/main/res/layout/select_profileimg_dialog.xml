<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/transparent_black_bg"
     >
<RelativeLayout 
    android:layout_width="250dp"
    android:layout_height="200dp"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:background="@drawable/roundedwhiteback_white"
    android:layout_margin="3dp"
     >

    <Button
        android:id="@+id/takePicBtn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/roundedskybluebg"
        android:text="Take picture"
        android:layout_marginTop="22dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/galleryBtn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/takePicBtn"
        android:layout_alignRight="@+id/takePicBtn"
        android:layout_below="@+id/takePicBtn"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundedskybluebg"
        android:text="Gallery"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/cancelDialogBtn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/galleryBtn"
        android:layout_alignLeft="@+id/galleryBtn"
        android:layout_alignRight="@+id/galleryBtn"
        android:layout_marginTop="10dp"
        android:background="@drawable/new_boder"
        android:text="Cancel"
        android:textColor="@color/gold_dark"
        android:textStyle="bold" />

</RelativeLayout>
</RelativeLayout>