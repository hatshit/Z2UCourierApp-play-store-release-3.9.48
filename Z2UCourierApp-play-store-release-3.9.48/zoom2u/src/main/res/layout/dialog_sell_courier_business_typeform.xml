<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#d3d3d3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/roundedwhiteback"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/cancelBtnSellCourierBusinessTypeForm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:layout_weight=".94"
            android:text="Cancel"
            android:fontFamily="@font/gotham_rnd_medium"
            android:textColor="@color/colorAccent"
            android:textSize="16dp" />

        <WebView
            android:id="@+id/webViewSellCourierBusinessTypeForm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_bottomborder"
            android:layout_weight=".06">
        </WebView>
    </LinearLayout>

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/progressBar" />

</RelativeLayout>
