<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="40dp"
        android:id="@+id/alcoholSignatureViewTitleTxt"
        android:text="@string/alcohol_delivery_TitleTxt"
        android:textSize="14dp"
        android:textColor="@color/gun_metal"
        android:gravity="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/termLayout_alcohol_delivery"
        android:layout_below="@+id/alcoholSignatureViewTitleTxt">

    <CheckBox
        android:id="@+id/checkBoxAlcohol_SignatureView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="15dp"
        android:button="@drawable/driversafety_selectunsel"/>

    <TextView
        android:id="@+id/termTxtAlcohol_SignatureView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:textColor="@color/gun_metal"
        android:lineSpacingExtra="2dp"
        android:layout_alignTop="@+id/checkBoxAlcohol_SignatureView"
        android:text="@string/alcohol_delivery_MsgTxt"
        android:layout_toRightOf="@+id/checkBoxAlcohol_SignatureView"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/signatureLayoutAlcohol_SignatureView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/termLayout_alcohol_delivery"
        android:layout_marginTop="25dp"
        android:background="@color/semiwhite" >
    </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/acceptRejectBtnLayoutAlcoholDelivery"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/white"
            android:weightSum="1">

            <Button
                android:id="@+id/acceptBtnAlcohol_SignatureView"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight=".5"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="7dp"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:text="Agree"
                android:background="@drawable/rounded_worrier_level"/>
            <Button
                android:id="@+id/rejectBtnAlcohol_SignatureView"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="35dp"
                android:layout_weight=".5"
                android:text="Decline"
                android:background="@drawable/rounded_elite_level"/>
        </LinearLayout>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:id="@+id/clearBtnAlcohol_SignatureView"
        android:layout_below="@+id/termLayout_alcohol_delivery"
        android:layout_alignRight="@+id/alcoholSignatureViewTitleTxt"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@drawable/bg_bottomborder_alcoholdelivery">

        <TextView
            android:id="@+id/clearTxtSignatureAlcohol"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:text="X  Clear"
            android:gravity="center"
            android:textColor="@color/graycolorText"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/crossbtnSignatureAlcohol"
            android:layout_marginLeft="8dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/signatureHereTxtAlcohol_SignatureView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/signatureLayoutAlcohol_SignatureView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textSize="12dp"
        android:textColor="@color/graycolorText"
        android:text="Sign here" />

</RelativeLayout>