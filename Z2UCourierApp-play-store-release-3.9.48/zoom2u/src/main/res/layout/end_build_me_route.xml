<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    android:id="@+id/mainDefaultDialogLayout"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/mainDefaultDialogLayout"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/white_background"
            android:orientation="vertical" >



            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/watch_icon"
                />






            <TextView
                android:id="@+id/titleDialog"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:fontFamily="@font/gotham_rnd_bold"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="bottom|center"
                android:text="Time's Up!"
                android:textColor="@color/gun_metal"
                android:textSize="16dp"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/dialogMessageText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/titleDialog"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:fontFamily="@font/gotham_rnd_medium"
                android:lineSpacingExtra="3dp"
                android:text="These bookings are no longer \navailable, please use the route \ntool again."
                android:textColor="@color/gun_metal"
                android:textSize="13dp" />


            <LinearLayout
                android:id="@+id/build_me"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:layout_marginTop="90dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/roundedskybluebg_new"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_routes_icon_white"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"
                    android:textColor="#FFFFFF"
                    android:text="Build a run again"/>



            </LinearLayout>


            <Button
                android:id="@+id/home"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_green_border"
                android:fontFamily="@font/gotham_rnd_bold"
                android:gravity="center"
                android:text="Home"
                android:textAllCaps="false"
                android:textColor="@color/gun_metal"
                android:textSize="16dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>