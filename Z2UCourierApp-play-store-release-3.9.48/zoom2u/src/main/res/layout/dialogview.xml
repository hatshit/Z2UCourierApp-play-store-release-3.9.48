<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/transparent_black_bg"
   >

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/roundedwhiteback"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/titleDialog"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="bottom|center"
            android:text="Take Photo!"
            android:textColor="@color/gunmetal_new1"
            android:textSize="18dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/lightgraycolor"/>

        <TextView
            android:id="@+id/dialogMessageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleDialog"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:maxLines="20"
            android:padding="7dp"
            android:text="Please take a picture of the parcel or where you have left the parcel safely. Do not take a photo of the customer."
            android:textColor="@color/gunmetal_new1"
            android:textSize="13dp" />
        <Button
            android:id="@+id/dialogYesBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/dialogMessageText"
            android:background="@drawable/roundedskybluebg"
            android:gravity="center"
            android:text="Yes"
            android:visibility="gone"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />
        <Button
            android:id="@+id/dialogDoneBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:layout_below="@+id/dialogMessageText"
            android:background="@drawable/roundedskybluebg"
            android:gravity="center"
            android:text="Got it!"
            android:visibility="visible"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:id="@+id/twoBtnLayoutForSkipAndNext"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/dialogScanNextBtn"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/roundedskybluebg"
                android:gravity="center"
                android:text="Scan Next"
                android:textSize="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="12.5dp"
                android:layout_weight="0.5"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/dialogSkipBtn"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/rounded_worrier_level"
                android:gravity="center"
                android:text="Skip"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="12.5dp"
                android:textSize="15dp"
                android:layout_weight="0.5"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>