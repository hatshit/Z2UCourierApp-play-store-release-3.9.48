<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/achievementlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_tlrbborder"
    android:gravity="center"
    android:layout_marginTop="12dp"
    android:orientation="vertical">


    <com.zoom2u.roundedimage.RoundedImageView
        android:id="@+id/achievementIMG"
        android:layout_width="120dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/topLineAchivementItem"
        android:layout_height="120dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/headingbold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="7dp"
        android:layout_below="@+id/achievementIMG"
        android:text="Completed 200 bookings"
        android:textColor="@color/gun_metal"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textdetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_below="@+id/headingbold"
        android:text="up next 20 bookings (5 to go)"
        android:textColor="@color/gun_metal"
        android:textSize="17dp" />

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_below="@+id/textdetail"-->
        <!--android:background="@color/common_plus_signin_btn_text_light_disabled" />-->

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarAchievementItem"
        android:layout_alignTop="@+id/achievementIMG"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp" />

</RelativeLayout>