<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:id="@+id/rrArrowLeft"
            android:layout_alignParentRight="true"
            android:layout_width="45dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/arrow_right"
                android:layout_width="15dp"
                android:layout_height="15dp"
                >

            </ImageView>

        </RelativeLayout>

        <ImageView
            android:visibility="gone"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow_right"
            android:layout_width="15dp"
            android:layout_height="match_parent">

        </ImageView>


        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rrArrowUp"
            android:layout_alignParentRight="true"
            android:layout_width="45dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/ic_arrow_down"
                android:layout_width="32dp"
                android:layout_height="32dp"
                >

            </ImageView>

        </RelativeLayout>

        <ImageView
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_arrow_down"
            android:layout_width="40dp"
            android:layout_height="40dp">

        </ImageView>

        <LinearLayout
            android:layout_toLeftOf="@+id/rrArrowLeft"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/communityone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>

            <TextView
                android:text="My Community"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                style="@style/style_12_bold"
                android:textColor="#fff"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_alignParentRight="true"
            app:cardCornerRadius="10dp"
            android:visibility="gone"
            android:id="@+id/commbooking"
            app:cardBackgroundColor="#2196F3"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp">


            <LinearLayout
                android:paddingHorizontal="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Community bookings offer"
                    style="@style/style_12_bold"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>



</LinearLayout>