<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gary"
    android:orientation="vertical"
    tools:context="com.suggestprice_team.courier_team.community.InvitationsFragment">

    <LinearLayout
        android:id="@+id/noinvitation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        >

        <TextView
            android:textSize="12dp"
            style="@style/style_15_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have no invitations.">

        </TextView>

    </LinearLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refreshrecivedinvitation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/recivedinvitationheader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:background="@color/light_gary"
                    android:visibility="gone"
                    >

                    <TextView
                        android:id="@+id/recived"
                        style="@style/style_15_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Received Invitations"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                </LinearLayout>


                <TextView
                    android:id="@+id/recivenodata"
                    style="@style/style_12_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="No Data"
                    android:visibility="gone">

                </TextView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recievedrecyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                </androidx.recyclerview.widget.RecyclerView>

                <TextView
                    android:id="@+id/seeall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="3dp"
                    android:drawableRight="@drawable/seeallitem"
                    android:drawablePadding="10dp"
                    android:text="See all"
                    android:textColor="@color/base_color1"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/sentinvitationheader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:background="@color/light_gary"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/sent"
                        style="@style/style_15_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Sent Invitations"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/sentnodata"
                    style="@style/style_12_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="No Data"
                    android:visibility="gone">

                </TextView>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/sentrecyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                </androidx.recyclerview.widget.RecyclerView>

                <TextView
                    android:id="@+id/seeallsentinvitation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="3dp"
                    android:drawableRight="@drawable/seeallitem"
                    android:drawablePadding="10dp"
                    android:text="See all"
                    android:textColor="@color/base_color1"
                    android:textStyle="bold"
                    android:visibility="gone" />


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</RelativeLayout>