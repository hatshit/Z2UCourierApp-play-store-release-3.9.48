<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toTopOf="@+id/next_ll"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/contactUsTxt"
                    style="@style/style_15_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="Contact Us :"
                    android:textSize="16dp" />

                <LinearLayout
                    android:id="@+id/linearChat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/liveChatTxt"
                        style="@style/style_12_name"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Live Chat:"
                        android:textColor="@color/add_member_label"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/liveChatTxtClick"
                        style="@style/style_15_name"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:background="@drawable/chip_background1"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Chat"
                        android:textColor="@color/white"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearChat"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/phoneTxt"
                        style="@style/style_12_name"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Phone:"
                        android:textColor="@color/add_member_label"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/phoneTxtdetail"
                        style="@style/style_15_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:gravity="center|left"
                        android:padding="2dp"
                        android:text="@string/zoom2u_support_no"
                        android:textColor="@color/msg_txt_color"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearChat"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/emailTxt"
                        style="@style/style_12_name"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Email:"
                        android:textColor="@color/add_member_label"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/emailTxtdetail"
                        style="@style/style_15_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:padding="2dp"
                        android:text="drivers@zoom2u.com"
                        android:textColor="@color/msg_txt_color"
                        android:textSize="14dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/reportAnIssueTxt"
                    style="@style/style_15_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="Report An Issue :"
                    android:textColor="@color/msg_txt_color"
                    android:textSize="16dp" />

                <LinearLayout
                    android:id="@+id/linearDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearChat"
                    android:layout_marginTop="5dp"
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/DAteTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/signUpPassword"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:text="Date first noticed:"
                        android:textColor="@color/add_member_label"
                        android:textSize="12dp"
                        style="@style/style_12_name"/>

                    <TextView
                        android:id="@+id/dateTxtdetail"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/bioTitleMyProfile"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/bg_transparent_bottom_graydark"
                        android:layout_marginLeft="10dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/gun_metal"
                        android:textColorHint="@color/add_member_hint_color"
                        android:textSize="13dp"
                        style="@style/style_12_bold"
                        android:hint="Select date"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearhowOften"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearChat"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/howOftenTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/signUpPassword"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:text="How often it happens:"
                        android:textColor="@color/add_member_label"
                        android:textSize="12dp"
                        style="@style/style_12_name"/>

                    <EditText
                        android:id="@+id/howOftenTxtdetail"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/addressTitleMyProfile"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_transparent_bottom_graydark"
                        android:hint="How often it happens"
                        android:singleLine="true"
                        android:textColor="@color/gun_metal"
                        android:textColorHint="@color/add_member_hint_color"
                        android:textSize="13dp"
                        style="@style/style_12_bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearDescribe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearChat"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <androidx.core.widget.NestedScrollView
                        android:id="@+id/addressScroller"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="5dp">

                        <RelativeLayout
                            android:id="@+id/rel1"
                            android:layout_width="fill_parent"
                            android:layout_height="200dp">

                            <EditText
                                android:id="@+id/describeTxtdetail"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/edit_new"
                                android:gravity="left|top"
                                android:hint="Describe what happens"
                                android:lineSpacingExtra="3dp"
                                android:padding="10dp"
                                android:scrollbars="vertical"
                                android:textColor="@color/add_member_label"
                                android:textColorHint="@color/add_member_label"
                                android:textSize="13dp"
                                style="@style/style_12_name"/>
                        </RelativeLayout>
                    </androidx.core.widget.NestedScrollView>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>

            </LinearLayout>


        </ScrollView>

        <LinearLayout
            android:id="@+id/next_ll"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:elevation="4dp"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/sendButton"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/roundedskybluebg"
                android:gravity="center"
                android:text="Send"
                android:textStyle="bold"
                android:textColor="@drawable/textselector"
                android:textSize="15dp" />


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
