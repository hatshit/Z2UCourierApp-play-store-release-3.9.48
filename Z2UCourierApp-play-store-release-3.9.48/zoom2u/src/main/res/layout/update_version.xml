<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="205dp"
    android:layout_marginTop="30dp"
    android:background="@drawable/roundedwhiteback"
    android:layout_gravity="center|top"
    android:orientation="vertical" >

    
    <TextView
        android:id="@+id/versionNameHeaderTxt"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="New Version Available!"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:background="@drawable/border_whitegb"
        android:textStyle="bold"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/versionNameMsgTxt"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/versionNameHeaderTxt"
        android:gravity="center"
        android:textColor="@color/gun_metal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="There is newer version of Z2U for couriers app is available,Please update to new version now."
        android:textSize="16dp" />

    <Button
        android:id="@+id/updateBtnVersionTxt"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/versionNameMsgTxt"
        android:textColor="@drawable/textselector"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/roundedskybluebg"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="Update" />

</RelativeLayout>
