<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:background="@drawable/roundedwhiteback"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/dialoglinear"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Transfer Job"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:textStyle="bold"
        android:paddingRight="20dp"
        android:textSize="16dp"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/gun_metal"
        android:gravity="center" />

        <View
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            >

        </View>

    <TextView
        android:id="@+id/titleAllocateDriverAlert"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Which courier you want to offer this booking?"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textStyle="bold"
        android:textSize="14dp"
        android:visibility="gone"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/gun_metal"
        android:gravity="center" />


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/teammcommunitumlinear"
        android:weightSum="2"
        android:orientation="horizontal"
        android:background="@drawable/roundedskybluebg"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <LinearLayout
            android:id="@+id/teammemberlinerar"
            android:gravity="center"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/teammember"
                style="@style/style_12_regular"
                android:text="Team Members"
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/communitymemberlinear"
            android:gravity="center"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="10dp"
                android:id="@+id/communitymember"
                style="@style/style_12_regular"
                android:text="Community Members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:id="@+id/communitynodata"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:text="@string/you_have_no_community_members"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:textColor="#000"
                style="@style/style_12_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:id="@+id/teamnodata"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:gravity="center"
                android:text="@string/no_team_members"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:textColor="#000"
                style="@style/style_12_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>


<com.zoom2u.utility.MaxHeightNestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <com.suggestprice_team.CustomRecyclerViewToShowDriver
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/listAllocateDriverAlert" />


            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:id="@+id/recycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>


    </RelativeLayout>
</com.zoom2u.utility.MaxHeightNestedScrollView>

        <LinearLayout
            android:visibility="gone"
        android:id="@+id/llSend"
        android:layout_height="52dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:weightSum="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_weight="0.5"
            android:text="Cancel"
            android:id="@+id/cancelBtnDriverAllocate"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="8dp"
            android:textStyle="bold"
            android:background="@drawable/new_boder"
            android:textColor="@color/gold_dark"
            android:textSize="14dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_weight="0.5"
            android:text="@string/send"
            android:textStyle="bold"
            android:id="@+id/allocateBtnDriverAllocate"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/roundedskybluebg"
            android:textColor="@drawable/textselector"
            android:textSize="14dp" />

    </LinearLayout>

        <Button
            android:visibility="gone"
            android:id="@+id/doneBtn"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_weight="0.5"
            android:text="ok"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/roundedskybluebg"
            android:textColor="@drawable/textselector"
            android:textSize="14dp" />

    </LinearLayout>

</RelativeLayout>