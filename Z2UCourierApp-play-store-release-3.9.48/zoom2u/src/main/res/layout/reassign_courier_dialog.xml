<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:weightSum="1"
    android:background="@drawable/roundedwhiteback">

    <TextView
        android:id="@+id/titleAllocateDriverAlert"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Which courier you want to \nre-assign this booking?"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="16dp"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/gun_metal"
        android:gravity="center" />

    <com.suggestprice_team.CustomRecyclerViewToShowDriver
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/listAllocateDriverAlert" />

    <LinearLayout android:layout_height="52dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:weightSum="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_weight="0.5"
            android:text="Cancel"
            android:id="@+id/cancelBtnDriverAllocate"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="8dp"
            android:textStyle="bold"
            android:background="@drawable/new_boder"
            android:textColor="@color/gold_dark"
            android:textSize="14dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_weight="0.5"
            android:text="Send"
            android:textStyle="bold"
            android:id="@+id/allocateBtnDriverAllocate"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/roundedskybluebg"
            android:textColor="@drawable/textselector"
            android:textSize="14dp" />

    </LinearLayout>
</LinearLayout>