<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:paddingBottom="10dp"
    android:background="#29000000" >

    <RelativeLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="10dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/roundedwhiteback">

    <TextView
        android:id="@+id/dialogMessageTextNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="15dp"
        android:lineSpacingExtra="3dp"
        android:paddingBottom="25dp"
        android:layout_below="@+id/titleDialogNew"
        android:gravity="center"
        android:textColor="@color/gun_metal"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/titleDialogNew"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:text="Special Instruction!"
        android:textSize="18dp"
        android:textColor="@color/gun_metal"
        android:textStyle="bold" />
    
    <View android:layout_height="0.5dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/titleDialogNew"
        android:background="@color/colorPrimaryDark"
        android:layout_marginRight="15dp"/>

    
    <Button android:layout_height="wrap_content"
        android:layout_width="80dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Okay"
        android:id="@+id/okBtnNewDialog"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"
        android:layout_below="@+id/dialogMessageTextNew"
        android:textColor="@drawable/textselector"
        android:background="@drawable/roundedskybluebg"/>
    </RelativeLayout>
</RelativeLayout>