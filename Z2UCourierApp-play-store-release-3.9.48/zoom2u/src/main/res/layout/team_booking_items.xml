<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/light_gary">

    <RelativeLayout
        android:id="@+id/teamMemberListItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/new_white_back"
        android:elevation="5dp">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/pendingPieceTxt"
            android:padding="8dp"

            >


            <TextView
                android:id="@+id/userNameTABList"
                style="@style/style_15_name"
                android:layout_width="230dp"
                android:layout_height="22dp"
                android:layout_below="@+id/newCustomerTxtInNBL"
                android:layout_alignTop="@+id/vichleImgTABList"
                android:layout_alignBottom="@+id/vichleImgTABList"
                android:layout_toRightOf="@+id/vichleImgTABList"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:paddingRight="0dp"
                android:singleLine="true"
                android:text="Steve Jobs" />

            <ImageView
                android:id="@+id/vichleImgTABList"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignTop="@+id/userNameBList"
                android:layout_marginLeft="5dp"
                android:background="@drawable/round_gunmetalbg"
                android:gravity="center"
                android:padding="5dp"
                android:src="@drawable/car" />

            <TextView
                android:id="@+id/courierPriceTABList"
                style="@style/style_15_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="$8"
                android:textColor="#5BCF4B"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/packageTxtTABList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vichleImgTABList"
                android:layout_alignStart="@+id/vichleImgTABList"
                android:layout_alignLeft="@+id/vichleImgTABList"
                android:layout_marginTop="4dp"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/deliverySpeedTABList"
                android:lineSpacingExtra="2dp"
                android:maxLines="2"
                android:textColor="@color/gun_metal"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/deliverySpeedTABList"
                style="@style/style_15_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/courierPriceTABList"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/statusTxtTABList"
                style="@style/style_15_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/packageTxtTABList"
                android:layout_alignStart="@+id/packageTxtTABList"
                android:layout_alignLeft="@+id/packageTxtTABList"
                android:layout_marginTop="7dp"
                android:textColor="@color/skyblue"
                android:textSize="13dp" />

    <TextView
                android:id="@+id/tv_drop_date_time"
                style="@style/style_15_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/statusTxtTABList"
                android:layout_alignStart="@+id/statusTxtTABList"
                android:layout_alignLeft="@+id/statusTxtTABList"
                android:layout_marginTop="3dp"
                android:text="12-March-2023"
                android:textColor="@color/gun_metal"
                android:textSize="13dp" />


            <TextView
                android:id="@+id/distanceTxtTABList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/statusTxtTABList"
                android:layout_marginTop="7dp"
                android:layout_toLeftOf="@+id/distanceDividerTxtTABList"
                android:textColor="@color/gun_metal"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/distanceDividerTxtTABList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/statusTxtTABList"
                android:layout_marginTop="4dp"
                android:layout_toLeftOf="@+id/timerTxtTABList"
                android:text=" | "
                android:textColor="@color/gun_metal"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/timerTxtTABList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/statusTxtTABList"
                android:layout_alignParentRight="true"
                android:layout_marginTop="7dp"
                android:textColor="@color/gun_metal"
                android:textSize="12dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl"
            android:layout_centerVertical="true"
            android:background="@color/light_gary_heading" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/line"
            android:background="@drawable/new_white_round"
            android:elevation="5dp"
            android:minHeight="60dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/addressHeaderTxtBD"
                    style="@style/style_12_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Pickup"
                    android:textSize="10dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/pickUpStreetTxtTABList"
                    style="@style/style_15_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center|bottom|left"
                    android:maxLines="2"
                    android:text="Pickup"
                    android:textColor="#374350"
                    android:textSize="12dp" />


            </LinearLayout>

            <View
                android:id="@+id/line1"
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/inactive" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/addressHeaderTxtBD"
                    style="@style/style_12_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Drop"
                    android:textSize="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dropStreetTxtTABList"
                    style="@style/style_15_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textPickupActiveBooking"
                    android:layout_alignLeft="@+id/textPickupActiveBooking"
                    android:layout_marginTop="3dp"
                    android:gravity="center|left"
                    android:maxLines="2"
                    android:text="Dropoff"
                    android:textColor="#374350"
                    android:textSize="12dp" />


            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>